<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:my="urn:import:org.dashbuilder.client.displayer">

  <g:VerticalPanel spacing="10">
    <g:HorizontalPanel spacing="10">
      <my:DataViewer ui:field="tableAll"/>
    </g:HorizontalPanel>
    <b:TabPanel>
      <b:Tab heading="By year" active="true">
        <g:FlowPanel>
          <my:DataViewer ui:field="tableByYear"/>
        </g:FlowPanel>
      </b:Tab>
      <b:Tab heading="By country">
        <g:FlowPanel>
          <my:DataViewer ui:field="tableByCountry"/>
        </g:FlowPanel>
      </b:Tab>
      <b:Tab heading="By product">
        <g:FlowPanel>
          <my:DataViewer ui:field="tableByProduct"/>
        </g:FlowPanel>
      </b:Tab>
      <b:Tab heading="By sales person">
        <g:FlowPanel>
          <my:DataViewer ui:field="tableBySalesman"/>
        </g:FlowPanel>
      </b:Tab>
    </b:TabPanel>

  </g:VerticalPanel>

</ui:UiBinder>