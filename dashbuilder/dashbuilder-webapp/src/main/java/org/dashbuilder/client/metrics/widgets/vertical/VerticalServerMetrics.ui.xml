<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >
  
  <ui:with field='resources' type='org.dashbuilder.client.metrics.MetricsDashboardClientBundle'/>

  <ui:style>

    .main_panel {

    }

    .labels_panel {
      width: 60px;
      height: 1100px;
    }

    .labels_text_panel {
      width: 60px;
      height: 800px;
      margin-top: 25px;
    }

    .summary_panel {
      width: 200px;
      height: 1100px;
    }

    .label {
      transform: rotate(-90deg) translateY(100%);
      transform-origin: 0% 100%;
      height: 150px;
    }

    .empty_icon_panel {
      width: 50px;
      height: 90px;
    }

    .icon_panel {
      width: 200px;
      height: 50px;
      background-color: #ffffff;
      margin-bottom: 10px;
      padding-bottom: 0px;
    }

    .displayers_panel {
      width: 200px;
      height: 750px;
      background-color: #ffffff;
    }

    .server_icon {
      width: 50px;
      height: 50px;
    }

    .metrics_dashboard_panel {
      border-radius: 5px 5px 5px 5px;
      margin: 10px;
      padding: 10px;
      font-weight: bold;
      background-color: ghostwhite;
      position: relative;
      -webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
      -moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
    }

    .metrics_dashboard_panel:before, .metrics_dashboard_panel:after {
      content: "";
      position: absolute;
      z-index: -1;
      -webkit-box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
      -moz-box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
      top: 10px;
      bottom: 10px;
      left: 0;
      right: 0;
      -moz-border-radius: 100px / 10px;
      border-radius: 100px / 10px;
    }

    .metrics_dashboard_panel:after {
      right: 10px;
      left: auto;
      -webkit-transform: skew(8deg) rotate(3deg);
      -moz-transform: skew(8deg) rotate(3deg);
      -ms-transform: skew(8deg) rotate(3deg);
      -o-transform: skew(8deg) rotate(3deg);
      transform: skew(8deg) rotate(3deg);
    }

  </ui:style>

  <g:HorizontalPanel spacing="10" addStyleNames="{style.main_panel}">

    <!-- Labels. -->
    <g:VerticalPanel spacing="10" visible="false" addStyleNames="{style.labels_panel}" ui:field="labelsPanel">

      <g:VerticalPanel spacing="10" addStyleNames="{style.empty_icon_panel}">
      </g:VerticalPanel>

      <g:VerticalPanel spacing="10" addStyleNames="{style.labels_text_panel} {style.metrics_dashboard_panel}"
                       horizontalAlignment="ALIGN_CENTER" >

        <g:Label text="CPU usage (%)" addStyleNames="{style.label}"/>
        <g:Label text="Used memory (Gb)" addStyleNames="{style.label}"/>
        <g:Label text="Network BW (kbps)" addStyleNames="{style.label}"/>
        <g:Label text="Running proc" addStyleNames="{style.label}"/>

      </g:VerticalPanel>
      
    </g:VerticalPanel>
    
    <!-- Server summary column. -->
    <g:VerticalPanel spacing="10" addStyleNames="{style.summary_panel}">

      <g:FocusPanel ui:field="serverIcon" >
        <b:Tooltip text='Show server details' placement="BOTTOM" ui:field="tooltip">
          <g:VerticalPanel spacing="10" addStyleNames="{style.icon_panel} {style.metrics_dashboard_panel}">
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <g:Image resource='{resources.computerIcon}' addStyleNames="{style.server_icon}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <g:HTML ui:field="serverName"/>
            </g:cell>
          </g:VerticalPanel>
        </b:Tooltip>
      </g:FocusPanel>

      <g:VerticalPanel spacing="10" addStyleNames="{style.displayers_panel} {style.metrics_dashboard_panel}" ui:field="mainPanel"
                       horizontalAlignment="ALIGN_CENTER">
        <!-- Displayer widgets are placed here programatically. -->
      </g:VerticalPanel>

    </g:VerticalPanel>
    
  </g:HorizontalPanel>

  
</ui:UiBinder>