<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:dashbuilder="urn:import:org.dashbuilder.displayer.client">
  
  <ui:with field='resources' type='org.dashbuilder.client.metrics.MetricsDashboardClientBundle'/>

  <ui:style>
    .dashboard_title { 
      font-weight: bold; 
      font-size: medium; 
    }
    .server_icon_Panel {
      margin-top: 100px;
      width: 150px;
    }
    .server_icon_area { 
      width: 150px;
      height: 100px;
      border: 1px darkgrey;
    }
    .server_details_area {
      
    }
    .server_cpu_area {
      width: 200px;
      height: 600px;
      font-weight: bold;
      background-color: darkgrey;
      margin-right: 25px;
    }
    .server_memory_area {
      width: 600px;
      height: 300px;
      font-weight: bold;
      background-color: darkgrey;
    }
    .server_network_area {
      width: 600px;
      height: 300px;
      font-weight: bold;
      background-color: darkgrey;
      margin-top: 10px;
    }
    .server_disk_area {
      width: 200px;
      height: 300px;
      font-weight: bold;
      background-color: darkgrey;
      margin-left: 25px;
    }
    .server_processes_area  {
      width: 200px;
      height: 300px;
      font-weight: bold;
      background-color: darkgrey;
      margin-left: 25px;
      margin-top: 10px;
    }
  </ui:style>
  
  <g:VerticalPanel spacing="10" width="800px" height="800px">
    <!-- Dashboard title -->
    <g:HorizontalPanel spacing="10" width="800px">
      <g:cell horizontalAlignment="ALIGN_CENTER">
        <g:HTML ui:field="title" addStyleNames="{style.dashboard_title}"/>
      </g:cell>
    </g:HorizontalPanel>

    <g:HorizontalPanel spacing="10">

      <!-- Server icons left area.-->
      <g:VerticalPanel spacing="10" ui:field="serverIconsPanel" addStyleNames="{style.server_icon_Panel}">

        <g:FocusPanel ui:field="serverIconArea1">
          <g:VerticalPanel spacing="10" addStyleNames="{style.server_icon_area}">
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <g:Image resource='{resources.computerIcon}' altText="server1" title="server1"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <g:HTML text="Server1"/>
            </g:cell>
          </g:VerticalPanel>
        </g:FocusPanel>

        <g:VerticalPanel spacing="10" addStyleNames="{style.server_icon_area}">
          <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            <g:Image resource='{resources.computerIcon}' altText="server2" title="server2"/>
          </g:cell>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="10" addStyleNames="{style.server_icon_area}">
          <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            <g:Image resource='{resources.computerIcon}' altText="server3" title="server3"/>
          </g:cell>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="10" addStyleNames="{style.server_icon_area}">
          <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            <g:Image resource='{resources.computerIcon}' altText="server4" title="server4"/>
          </g:cell>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="10" addStyleNames="{style.server_icon_area}">
          <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            <g:Image resource='{resources.computerIcon}' altText="server5" title="server5"/>
          </g:cell>
        </g:VerticalPanel>
        
      </g:VerticalPanel>

      <!-- Summary area. -->
      <g:HorizontalPanel visible="false" spacing="10" ui:field="summaryArea">
        
        <g:VerticalPanel spacing="10">
          
          <g:HorizontalPanel spacing="10">
            <dashbuilder:Displayer ui:field="maxCPUxServer"/>
          </g:HorizontalPanel>
          
          <g:HorizontalPanel spacing="10">
            <dashbuilder:Displayer ui:field="maxMemxServerSettings"/>
          </g:HorizontalPanel>
          
        </g:VerticalPanel>
        
        <g:VerticalPanel spacing="10">
          
          <g:HorizontalPanel spacing="10">
            <dashbuilder:Displayer ui:field="maxProcessesxServerSettings"/>
          </g:HorizontalPanel>
          
          <g:HorizontalPanel spacing="10">
            <dashbuilder:Displayer ui:field="maxNetworkxServerSettings"/>
          </g:HorizontalPanel>
          
        </g:VerticalPanel>
        
      </g:HorizontalPanel>

      <!-- Server detail area. -->
      <g:HorizontalPanel spacing="10" visible="true" addStyleNames="{style.server_details_area}" ui:field="serverDetailsArea">

        <!-- CPU usage area. -->
        <g:VerticalPanel spacing="10" addStyleNames="{style.server_cpu_area}">

          <g:VerticalPanel spacing="10">
            <g:HTML text="Current CPU usage (%)"/>
          </g:VerticalPanel>
          
          <g:VerticalPanel spacing="10">
            <g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverCPU0"/>  
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverCPU1"/>
            </g:cell>
          </g:VerticalPanel>
          
        </g:VerticalPanel>

        <!-- Memory and network usage area. -->
        <g:VerticalPanel spacing="10">

          <!-- Memory usage area. -->
          <g:VerticalPanel spacing="10" addStyleNames="{style.server_memory_area}">
            <g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
              <g:HTML text="Current Memory usage (Gb)"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverMemory"/>
            </g:cell>
          </g:VerticalPanel>

          <!-- Network usage area. -->
          <g:VerticalPanel spacing="10" addStyleNames="{style.server_network_area}">
            <g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
              <g:HTML text="Current Network usage (kbps)"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverNetwork"/>
            </g:cell>
          </g:VerticalPanel>
          
        </g:VerticalPanel>

        <!-- Disk and processes usage area. -->
        <g:VerticalPanel spacing="10">

          <!-- Disk usage area. -->
          <g:VerticalPanel spacing="10" addStyleNames="{style.server_disk_area}">
            <g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
              <g:HTML text="Current disk usage (Mb)"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverDisk"/>
            </g:cell>
          </g:VerticalPanel>

          <!-- Processes usage area. -->
          <g:VerticalPanel spacing="10" addStyleNames="{style.server_processes_area}">
            <g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
              <g:HTML text="Current processes usage"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverProcessesRunning"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
              <dashbuilder:Displayer ui:field="serverProcessesSleeping"/>
            </g:cell>
          </g:VerticalPanel>
          
        </g:VerticalPanel>

      </g:HorizontalPanel>

    </g:HorizontalPanel>
    
  </g:VerticalPanel>
  
  
  
</ui:UiBinder>