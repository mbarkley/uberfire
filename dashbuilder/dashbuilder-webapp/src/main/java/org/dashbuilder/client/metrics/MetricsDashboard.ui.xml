<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >
  
  <ui:with field='resources' type='org.dashbuilder.client.metrics.MetricsDashboardClientBundle'/>

  <ui:style>
    
    .main_panel {
      margin: 50px;
      width: 1200px;
      height: 1200px;
      background-color: #ffffff;
    }

    .dashboard_title_area {
      width: 1200px;
      font-weight: bold;
      font-size: medium;
    }
    
    .back_icon {
      width: 50px;
      height: 50px;
    }

    </ui:style>
  
  <g:VerticalPanel spacing="10" addStyleNames="{style.main_panel}">
    
    <!-- Dashboard title -->
    <g:HorizontalPanel spacing="10" addStyleNames="{style.dashboard_title_area}">
      <g:cell horizontalAlignment="ALIGN_LEFT">
        <g:Image resource='{resources.backIcon}' addStyleNames="{style.back_icon}" ui:field="backIcon"/>
      </g:cell>
      <g:cell horizontalAlignment="ALIGN_CENTER">
        <g:HTML ui:field="title"/>
      </g:cell>
    </g:HorizontalPanel>


    <!-- Summary area. -->
    <g:HorizontalPanel visible="false" spacing="10" ui:field="analyticSummaryArea">

      <!-- Metrics summary widget inserted here programatically. -->

    </g:HorizontalPanel>

    <!-- Vertical servers summary area. -->
    <g:HorizontalPanel visible="false" spacing="10" ui:field="verticalSummaryArea">

      <!-- Server vertical details widget inserted here programatically. -->

    </g:HorizontalPanel>

    <!-- Server detail area. -->
    <g:HorizontalPanel spacing="10" visible="false" ui:field="serverDetailsArea">

      <!-- Server details widget inserted here programatically. -->

    </g:HorizontalPanel>
    
  </g:VerticalPanel>
  
  
  
</ui:UiBinder>