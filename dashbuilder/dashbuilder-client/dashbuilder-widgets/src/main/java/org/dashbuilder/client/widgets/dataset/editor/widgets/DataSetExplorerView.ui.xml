<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >

  <ui:with field="i18n" type="org.dashbuilder.client.widgets.resources.i18n.DataSetExplorerConstants"/>

  <ui:style type="org.dashbuilder.client.widgets.dataset.editor.widgets.DataSetExplorerView.DataSetExplorerViewStyle">
    .mainPanel {
      width: 100%;
      font-size: 12pt;
    }
    .columnsPanel {
      float: left;
      width: 100%;
    }
    .statusPanel {
      float: left;
      width: 60%;
    }
    .statusIcon {
      float: left;
      margin-right: 10px;
    }
    .statusText {
      font-size: small;      
    }
    .estimationsPanel {
      float: left;
      width: 40%;
    }
    .buttonsPanel {
      float:left;
      width: 100%;
      margin: 10px;
      text-align: center;
    }
    .button {
      margin-right: 10px;
    }
    .slidingPanel {
      width: 100%;
      height: 40px;
      overflow: hidden;
    }
    .deleteText { 
      float: left;
      font-size: small;
    }
  </ui:style>
  
  <g:HTMLPanel addStyleNames="{style.mainPanel} ">
    
    <g:Label visible="false" ui:field="label"/>

    <g:FlowPanel>
      <b:Accordion ui:field="dataSetsAccordion">
        
      </b:Accordion> 
    </g:FlowPanel>
    
  </g:HTMLPanel>
  
</ui:UiBinder>