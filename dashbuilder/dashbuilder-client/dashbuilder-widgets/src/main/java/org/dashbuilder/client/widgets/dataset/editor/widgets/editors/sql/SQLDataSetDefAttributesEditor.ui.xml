<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:dash-client="urn:import:org.dashbuilder.common.client.validation.editors"
    >

  <ui:with field="i18n" type="org.dashbuilder.client.widgets.resources.i18n.DataSetEditorConstants"/>

  <ui:style>
    .mainPanel {
    }
  </ui:style>

  <!-- SQL attributes. -->
  <g:FlowPanel ui:field="sqlAttributesPanel" addStyleNames="{style.mainPanel}">

    <!-- Data source. -->
    <b:Row>
      <b:Column size="2">
        <g:HTML text="{i18n.sql_datasource}"/>
      </b:Column>
      <b:Column size="3">
        <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="dataSource">
          <dash-client:valuebox>
            <b:TextBox placeholder="{i18n.sql_datasource_placeHolder}" />
          </dash-client:valuebox>
        </dash-client:ValueBoxEditorDecorator>
      </b:Column>
    </b:Row>


    <!-- DB Schema. -->
    <b:Row>
      <b:Column size="2">
        <g:HTML text="{i18n.sql_schema}"/>
      </b:Column>
      <b:Column size="3">
        <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="dbSchema">
          <dash-client:valuebox>
            <b:TextBox placeholder="{i18n.sql_schema_placeHolder}" />
          </dash-client:valuebox>
        </dash-client:ValueBoxEditorDecorator>
      </b:Column>
    </b:Row>


    <!-- Table. -->
    <b:Row>
      <b:Column size="2">
        <g:HTML text="{i18n.sql_table}"/>
      </b:Column>
      <b:Column size="3">
        <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="dbTable">
          <dash-client:valuebox>
            <b:TextBox placeholder="{i18n.sql_table_placeHolder}" />
          </dash-client:valuebox>
        </dash-client:ValueBoxEditorDecorator>
      </b:Column>
    </b:Row>

  </g:FlowPanel>


</ui:UiBinder>