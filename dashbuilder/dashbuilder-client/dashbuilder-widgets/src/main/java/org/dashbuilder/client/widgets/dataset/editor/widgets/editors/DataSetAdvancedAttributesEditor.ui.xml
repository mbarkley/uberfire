<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:dash-client="urn:import:org.dashbuilder.common.client.validation.editors"
    >

  <ui:with field="i18n" type="org.dashbuilder.client.widgets.resources.i18n.DataSetEditorConstants"/>

  <ui:style>
    .mainPanel {
    }
    .sectionTitle {
        font-weight: bold;      
    }
    .editor {
      float: left;
      margin: 10px;
      margin-left: 0px;
    }
  </ui:style>

  <g:FlowPanel ui:field="advancedAttributesPanel" addStyleNames="{style.mainPanel}">


    <b:Row>

      <!-- Backend cache policy attributes. -->
      <b:Column size="4">
        <g:HTML text="{i18n.backendCacheAttributes}" addStyleNames="{style.sectionTitle} "/>
      </b:Column>

      <!-- Client cache policy attributes. -->
      <b:Column size="4">
        <g:HTML text="{i18n.clientCacheAttributes}" addStyleNames="{style.sectionTitle} "/>
      </b:Column>      

      <!-- Refresh policy attributes. -->
      <b:Column size="4">
        <g:HTML text="{i18n.refreshPolicyAttributes}" addStyleNames="{style.sectionTitle} "/>
      </b:Column>
      
    </b:Row>

    <b:Row >

      <!-- Cache policy attributes. -->
      <b:Column size="4">
        <g:FlowPanel>
          <dash-client:BooleanSwitchEditorDecorator ui:field="attributeBackendCacheStatus"  addStyleNames="{style.editor} "/>
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="attributeMaxRows"  addStyleNames="{style.editor} ">
            <dash-client:valuebox>
              <g:IntegerBox /> <!-- TODO:  placeholder="{i18n.attributeMaxRows}" -->
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </g:FlowPanel>
      </b:Column>

      <!-- Client cache policy attributes. -->
      <b:Column size="4">
        <g:FlowPanel>
          <dash-client:BooleanSwitchEditorDecorator ui:field="attributeClientCacheStatus" addStyleNames="{style.editor} "/>
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="attributeMaxBytes" addStyleNames="{style.editor} ">
            <dash-client:valuebox>
              <g:IntegerBox /> <!-- TODO:  placeholder="{i18n.attributeMaxBytes}" -->
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </g:FlowPanel>
      </b:Column>

      <!-- Refresh policy attributes. -->
      <b:Column size="4">
        <g:FlowPanel>
          <dash-client:BooleanSwitchEditorDecorator ui:field="attributeRefreshStatus" addStyleNames="{style.editor} "/>
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="attributeRefreshInterval" addStyleNames="{style.editor} ">
            <dash-client:valuebox>
              <b:TextBox placeholder="{i18n.attributeRefreshInterval}" />
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </g:FlowPanel>
      </b:Column>

    </b:Row>

  </g:FlowPanel>

</ui:UiBinder>