<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >

  <ui:style>
    .mainPanelStyle {
      border: 1px solid;
      margin: 10px;
      padding: 10px;
    }
  </ui:style>
  
  <!-- Main panel TODO: Title i18n. -->
  <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanelStyle}" title="Renderer selector">

    <!-- List box selector widget. -->
    <g:FlowPanel ui:field="listPanel" visible="false">
      <g:ListBox ui:field="listBox"/>
    </g:FlowPanel>

    <!-- Radio buttons selector widget. -->
  <g:HorizontalPanel ui:field="radioButtonsPanel" visible="false" spacing="10" ></g:HorizontalPanel>
    
  </g:FlowPanel>
  
</ui:UiBinder>