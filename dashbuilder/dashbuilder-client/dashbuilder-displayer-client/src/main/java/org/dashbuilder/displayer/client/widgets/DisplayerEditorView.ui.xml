<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.dashbuilder.displayer.client.resources.i18n.CommonConstants"/>

  <ui:style>
    .leftPanel {
      font-size: 12pt;
      float: left;
      margin-right: 25px;
      width: 250px;
      max-width: 250px;
      max-height: 390px;
      overflow-y: hidden;
      margin-top: 15px;
    }
    .centerPanel {
      font-size: 12pt;
      float: left;
      margin-right: 25px;
      width: 630px;
      height: 390px;
      max-width: 620px;
      max-height: 390px;
      overflow: auto;
    }
    .dataTablePanel {
      font-size: 12pt;
      float: left;
      margin: 10px;
    }
  </ui:style>

  <g:HTMLPanel>
    <b:NavTabs>
      <b:TabListItem ui:field="optionType" text="{i18n.displayer_editor_tab_type}" />
      <b:TabListItem ui:field="optionData" text="{i18n.displayer_editor_tab_data}" />
      <b:TabListItem ui:field="optionSettings" text="{i18n.displayer_editor_tab_display}" />
    </b:NavTabs>
    <g:HorizontalPanel>
      <g:VerticalPanel>
        <g:HorizontalPanel ui:field="dataTablePanel" styleName="{style.dataTablePanel}" visible="false">
          <b:CheckBox text="{i18n.displayer_editor_view_as_table}" ui:field="viewAsTable" />
        </g:HorizontalPanel>
        <g:SimplePanel ui:field="leftPanel" styleName="{style.leftPanel}" />
      </g:VerticalPanel>
      <g:FlowPanel ui:field="centerPanel" styleName="{style.centerPanel}" />
    </g:HorizontalPanel>
  </g:HTMLPanel>
</ui:UiBinder>
