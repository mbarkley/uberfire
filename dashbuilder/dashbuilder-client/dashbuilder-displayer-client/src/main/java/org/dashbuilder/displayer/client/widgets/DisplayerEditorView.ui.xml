<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:style>
    .childPanel {
      font-size: 12pt;
      padding: 5px;
      margin: 10px;
      height: 100%;
      width: 100%;
    }
  </ui:style>

  <g:HTMLPanel>
    <b:TabPanel ui:field="optionsPanel">
      <b:Tab ui:field="optionType" heading="Type" />
      <b:Tab ui:field="optionData" heading="Data " />
      <b:Tab ui:field="optionSettings" heading="Display" />
    </b:TabPanel>
    <g:HorizontalPanel>
        <g:SimplePanel ui:field="leftPanel" styleName="{style.childPanel}" />
        <g:SimplePanel ui:field="centerPanel" styleName="{style.childPanel}" />
    </g:HorizontalPanel>
  </g:HTMLPanel>
</ui:UiBinder>
