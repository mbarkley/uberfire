<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    >

  <ui:with field="i18n" type="org.dashbuilder.common.client.resources.i18n.DashbuilderCommonConstants"/>

  <ui:style type="org.dashbuilder.common.client.validation.editors.MapEditor.MapEditorStyle">
    .mainPanel {
      
    }
    .errorPanelError {
      border: 1px solid red;
    }
    .gridPanel {
      width: 100%;
    }
    .grid {
      width: 100%;
      height: 200px;
      font-size: small;
      overflow: auto;
    }
    .keyValuePanel {
      width: 100%;      
    }
    .keyPanel {

    }
    .valuePanel {

    }
    .label {
      float: left;
      font-size: small;
      margin-right: 10px;
    }
    .input {
      font-size: small;
    }
  </ui:style>
  
  <g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel} ">

    <g:FlowPanel addStyleNames="{style.keyValuePanel} ">
      
      <b:Tooltip text="" ui:field="keyErrorTooltip">
        <g:FlowPanel ui:field="keyPanel" addStyleNames="{style.keyPanel} ">
          <g:Label text="{i18n.key}" addStyleNames="{style.label} "/>
          <b:TextBox ui:field="keyBox" addStyleNames="{style.input} "/>
        </g:FlowPanel>
      </b:Tooltip>

      <b:Tooltip text="" ui:field="valueErrorTooltip">
        <g:FlowPanel ui:field="valuePanel" addStyleNames="{style.valuePanel} ">
          <g:Label text="{i18n.value}" addStyleNames="{style.label} "/>
          <b:TextBox ui:field="valueBox" addStyleNames="{style.input} "/>
        </g:FlowPanel>
      </b:Tooltip>
      
      <b:Button ui:field="addButton" text="{i18n.add}" icon="PLUS" title="{i18n.add}"/>
      
    </g:FlowPanel>

    <g:ScrollPanel ui:field="gridPanel" addStyleNames="{style.gridPanel} ">
      <b:DataGrid ui:field="grid" addStyleNames="{style.grid} ">
      </b:DataGrid>
    </g:ScrollPanel>
    
  </g:HTMLPanel>
  
</ui:UiBinder>