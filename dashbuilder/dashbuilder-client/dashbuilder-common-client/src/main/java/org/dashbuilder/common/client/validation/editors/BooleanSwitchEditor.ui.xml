<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
  <ui:style type="org.dashbuilder.common.client.validation.editors.BooleanSwitchEditor.BooleanSwitchEditorStyle">
    .mainPanel {
      border: none;
    }
    .mainPanelError {
      border: 1px solid red;
    }
    .label {
      cursor: pointer;
    }
  </ui:style>

  <g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel} ">
    <b:Tooltip title="" ui:field="errorTooltip">
      <b:Label addStyleNames="{style.label}" ui:field="label"/>
    </b:Tooltip>
  </g:HTMLPanel>
  
</ui:UiBinder>