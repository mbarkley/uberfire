<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:dash-client="urn:import:org.dashbuilder.common.client.validation.editors"
    >

  <ui:with field="i18n" type="org.dashbuilder.dataset.client.resources.i18n.DataSetEditorConstants"/>

  <ui:style>
    .mainPanel {
    }
  </ui:style>
  
  <g:HorizontalPanel spacing="10" ui:field="basicAttributesPanel" addStyleNames="{style.mainPanel} ">

      <!-- Common attributes. -->
      <b:Fieldset>
        <b:Legend title="{i18n.commonAttributes}"><ui:text from="{i18n.commonAttributes}"/></b:Legend>
        <b:ControlGroup>
          <b:ControlLabel><ui:text from="{i18n.attributeUUID}"/></b:ControlLabel>

          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="attributeUUID">
            <dash-client:valuebox>
              <g:TextBox enabled="false" />
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </b:ControlGroup>
        <b:ControlGroup>
          <b:ControlLabel><ui:text from="{i18n.attributeName}"/></b:ControlLabel>
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="name">
            <dash-client:valuebox>
              <g:TextBox /> <!-- TODO:  placeholder="{i18n.attributeName}" -->
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
        </b:ControlGroup>
      </b:Fieldset>

  </g:HorizontalPanel>


</ui:UiBinder>