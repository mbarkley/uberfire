<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:dash-client="urn:import:org.dashbuilder.common.client.validation.editors"
    >

  <ui:with field="i18n" type="org.dashbuilder.dataset.client.resources.i18n.DataSetEditorConstants"/>

  <ui:style>
    .mainPanel {
      
    }
  </ui:style>

  <!-- Common attributes. -->
  <g:FlowPanel ui:field="basicAttributesPanel" addStyleNames="{style.mainPanel} ">

    <b:Row>
      
      <!-- UUID. -->
      <b:Column size="1">
          <g:HTML text="{i18n.attributeUUID}"/>
      </b:Column>
      <b:Column size="3">
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="attributeUUID">
            <dash-client:valuebox>
              <g:TextBox enabled="false" />
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>  
      </b:Column>

      <!-- Name. -->
      <b:Column size="1">
        <g:HTML text="{i18n.attributeName}"/>
      </b:Column>
      <b:Column size="3">
          <dash-client:ValueBoxEditorDecorator errorLabelPosition="TOOLTIP" ui:field="name">
            <dash-client:valuebox>
              <g:TextBox /> <!-- TODO:  placeholder="{i18n.attributeName}" -->
            </dash-client:valuebox>
          </dash-client:ValueBoxEditorDecorator>
      </b:Column>

    </b:Row>


  </g:FlowPanel>


</ui:UiBinder>