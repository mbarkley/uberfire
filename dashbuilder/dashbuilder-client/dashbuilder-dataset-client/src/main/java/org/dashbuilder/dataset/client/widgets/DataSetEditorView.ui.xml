<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >

  <ui:with field="i18n" type="org.dashbuilder.dataset.client.resources.i18n.DataSetEditorConstants"/>

  <ui:style type="org.dashbuilder.dataset.client.widgets.DataSetEditorView.DataSetEditorViewStyle">
    .mainPanel {
    }
    .statusLabel {
      cursor: pointer;
    }
  </ui:style>
  
  <g:HTMLPanel addStyleNames="{style.mainPanel} ">
    
    <g:VerticalPanel spacing="10">
      
      <b:Label ui:field="titleLabel"/>
      
      <g:HorizontalPanel spacing="10" ui:field="typesPanel">
        
      </g:HorizontalPanel>

      <g:VerticalPanel spacing="10" ui:field="attributesPanel">
        
        <b:WellForm type="VERTICAL" method="POST" ui:field="attributesForm">
          
          <!-- Common attributes. -->
          <b:Fieldset>
            <b:Legend title="{i18n.commonAttributes}"><ui:text from="{i18n.commonAttributes}"/></b:Legend>
            <b:ControlGroup>
              <b:ControlLabel><ui:text from="{i18n.attributeUUID}"/></b:ControlLabel>
              <b:TextBox placeholder="" ui:field="attributeUUID" enabled="false"/>
            </b:ControlGroup>
            <b:ControlGroup>
              <b:ControlLabel><ui:text from="{i18n.attributeName}"/></b:ControlLabel>
              <b:TextBox placeholder="{i18n.attributeName}" ui:field="attributeName"/>
            </b:ControlGroup>
          </b:Fieldset>

          <!-- Backend attributes. -->
          <b:Fieldset>
            <b:Legend title="{i18n.backendCacheAttributes}"><ui:text from="{i18n.backendCacheAttributes}"/></b:Legend>
            <b:ControlGroup>
              <b:Label addStyleNames="{style.statusLabel}" ui:field="attributeBackendCacheStatus"/>
            </b:ControlGroup>
            <b:ControlGroup>
              <b:ControlLabel><ui:text from="{i18n.attributeMaxRows}"/></b:ControlLabel>
              <b:TextBox placeholder="{i18n.attributeMaxRows}" ui:field="attributeMaxRows"/>
            </b:ControlGroup>
          </b:Fieldset>
          
        </b:WellForm>
      </g:VerticalPanel>

      <g:HorizontalPanel spacing="10" ui:field="buttonsPanel">
        <b:Button text="{i18n.cancel}" ui:field="cancelButton"/>
        <b:Button text="{i18n.back}" ui:field="backButton"/>
        <b:Button text="{i18n.test}" ui:field="testButton"/>
        <b:Button text="{i18n.next}" ui:field="nextButton"/>
      </g:HorizontalPanel>
      
    </g:VerticalPanel>
    
  </g:HTMLPanel>
  
</ui:UiBinder>