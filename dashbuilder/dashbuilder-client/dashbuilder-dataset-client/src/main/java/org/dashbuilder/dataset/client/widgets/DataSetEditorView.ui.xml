<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:dash-dset-editors="urn:import:org.dashbuilder.dataset.client.widgets.editors"
             xmlns:dash-dset-editors-sql="urn:import:org.dashbuilder.dataset.client.widgets.editors.sql"
             xmlns:dash-dset-editors-csv="urn:import:org.dashbuilder.dataset.client.widgets.editors.csv"
             xmlns:dash-dset-editors-static="urn:import:org.dashbuilder.dataset.client.widgets.editors.bean"
             xmlns:dash-dset-editors-el="urn:import:org.dashbuilder.dataset.client.widgets.editors.elasticsearch"
    >

  <ui:with field="i18n" type="org.dashbuilder.dataset.client.resources.i18n.DataSetEditorConstants"/>

  <ui:style type="org.dashbuilder.dataset.client.widgets.DataSetEditorView.DataSetEditorViewStyle">
    .mainPanel {
      font-size: 12pt;
      margin: 10px;
    }
    .titlePanel {
      vertical-align: middle;
      text-align:center;
      margin-bottom: 50px;
    }
    .title {
      font-size: 14pt;
      font-weight: bold;
    }
    .editorPanel {
      margin: 25px;
    }
    .buttonsPanel {
      margin-top: 50px;
    }
    .dataSetCountLabel {
      
    }
  </ui:style>
  
  <g:FlowPanel addStyleNames="{style.mainPanel} well" ui:field="mainPanel" >
    
    <g:FlowPanel addStyleNames="{style.titlePanel}">
      <!-- TODO: Replace by bootstrap heading widget? -->
      <g:HTML text="" ui:field="title" addStyleNames="{style.title}"/>  
    </g:FlowPanel>
    
    
    <g:FlowPanel ui:field="initialViewPanel">
      <g:HTML addStyleNames="{style.dataSetCountLabel}" ui:field="dataSetCountText"/>
      <g:Hyperlink text="{i18n.createNewDataSetText}" ui:field="newDataSetLink"/>
    </g:FlowPanel>
    
    <g:FlowPanel ui:field="providerSelectionViewPanel" addStyleNames="{style.editorPanel}">
      <dash-dset-editors:DataSetProviderTypeEditor editMode="true" ui:field="dataSetProviderTypeEditor"/>
    </g:FlowPanel>

    <g:FlowPanel ui:field="basicAttributesEditionViewPanel" addStyleNames="{style.editorPanel}">
      <dash-dset-editors:DataSetBasicAttributesEditor editMode="true" ui:field="dataSetBasicAttributesEditor"/>
    </g:FlowPanel>

    <g:FlowPanel ui:field="tabViewPanel" addStyleNames="{style.editorPanel}">
      
      <b:TabPanel tabPosition="above" ui:field="tabPanel" >
  
        <!-- Data configuration. -->
        <b:Tab heading="{i18n.tab_dataConfiguration}" active="true" ui:field="dataConfigurationTab" >
          <!--<b:customTab>
            <g:Image addStyleNames="{style.icon}" resource="{res.logo}"/>
          </b:customTab>-->
  
          <g:FlowPanel ui:field="sqlAttributesEditionViewPanel" >
            <dash-dset-editors-sql:SQLDataSetDefAttributesEditor editMode="true" ui:field="sqlDataSetDefAttributesEditor"/>
          </g:FlowPanel>
  
          <g:FlowPanel ui:field="csvAttributesEditionViewPanel" >
            <dash-dset-editors-csv:CSVDataSetDefAttributesEditor editMode="true" ui:field="csvDataSetDefAttributesEditor"/>
          </g:FlowPanel>
  
          <g:FlowPanel ui:field="beanAttributesEditionViewPanel" >
            <dash-dset-editors-static:BeanDataSetDefAttributesEditor editMode="true" ui:field="beanDataSetDefAttributesEditor"/>
          </g:FlowPanel>
  
          <g:FlowPanel ui:field="elAttributesEditionViewPanel" >
            <dash-dset-editors-el:ELDataSetDefAttributesEditor editMode="true" ui:field="elDataSetDefAttributesEditor"/>
          </g:FlowPanel>
  
        </b:Tab>

        <!-- Columns, filter & preview. -->
        <b:Tab heading="{i18n.tab_dataPreview}" active="false" ui:field="dataPreviewTab">

          <g:FlowPanel ui:field="columnsAndFilterEditionViewPanel" addStyleNames="{style.editorPanel}">
            <dash-dset-editors:DataSetColumnsAndFilterEditor editMode="true" ui:field="dataSetColumnsAndFilterEditor"/>
          </g:FlowPanel>
          
        </b:Tab>

        <!-- Advanced configuration. -->
        <b:Tab heading="{i18n.tab_advancedConfiguration}" active="false" ui:field="dataAdvancedConfigurationTab">

          <g:FlowPanel ui:field="advancedAttributesEditionViewPanel" addStyleNames="{style.editorPanel}">
            <dash-dset-editors:DataSetAdvancedAttributesEditor editMode="true" ui:field="dataSetAdvancedAttributesEditor"/>
          </g:FlowPanel>
          
        </b:Tab>
        
      </b:TabPanel>
      
    </g:FlowPanel>
    
    <g:FlowPanel ui:field="buttonsPanel" addStyleNames="{style.buttonsPanel}">
      
      <b:Button text="{i18n.cancel}" ui:field="cancelButton"/>

      <b:Button text="{i18n.next}" ui:field="nextButton" type="SUCCESS"/>
      
    </g:FlowPanel>

  </g:FlowPanel>
  
</ui:UiBinder>